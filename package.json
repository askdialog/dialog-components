{
  "name": "@askdialog/dialog-components",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "description": "Dialog UI Components Monorepo",
  "scripts": {
    "build": "nx run-many -t build",
    "build:sdk": "nx build @askdialog/dialog-sdk",
    "build:vue": "nx build @askdialog/dialog-vue",
    "build:affected": "nx affected -t build",
    "dev": "nx run-many -t dev --parallel=3",
    "dev:vue": "nx dev @askdialog/dialog-vue",
    "lint": "nx run-many -t lint",
    "lint:affected": "nx affected -t lint",
    "lint:fix": "nx run-many -t lint -- --fix",
    "format": "nx run-many -t lint -- --fix",
    "format:check": "nx run-many -t lint",
    "test": "nx run-many -t test",
    "clean": "nx run-many -t clean",
    "graph": "nx graph",
    "publish:sdk": "pnpm --filter @askdialog/dialog-sdk publish",
    "publish:vue": "pnpm --filter @askdialog/dialog-vue publish"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@nx/eslint": "^20.3.0",
    "@nx/eslint-plugin": "^20.3.0",
    "@nx/js": "^20.3.0",
    "@nx/vite": "^20.3.0",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-prettier": "^5.2.1",
    "globals": "^16.0.0",
    "nx": "^20.3.0",
    "prettier": "^3.4.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.18.1"
  },
  "packageManager": "pnpm@10.0.0",
  "engines": {
    "node": ">=22",
    "pnpm": ">=10"
  }
}
